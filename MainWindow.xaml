<Window x:Class="DrawTriangles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawTriangles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="MyGrid">
        <Button Content="Click to load" Click="Button_Click" Width="100" Height="100" HorizontalAlignment="Right" VerticalAlignment="Top" RenderTransformOrigin="0.493,0.542">
            
        </Button>
        
        <Button Content="Save Image" Width="100" Height="100" HorizontalAlignment="Right"  RenderTransformOrigin="0.493,0.542"
        Click="SaveButton_Click"/>

        <Button x:Name="ChangeColorButton" Content="Change Color" Width="100" Height="100" 
        HorizontalAlignment="Right" VerticalAlignment="Bottom" RenderTransformOrigin="0.493,0.542"
        Click="ChangeColorButton_Click"/>

        <Canvas x:Name="drawingCanvas" ClipToBounds="True" MouseLeftButtonDown="Image_PreviewMouseLeftButtonDown" MouseMove="Image_PreviewMouseMove" MouseUp="Image_PreviewMouseLeftButtonUp">
            <Image x:Name="imagePicture" Width="600" Height="420" Stretch="Uniform"/>
        </Canvas>
    </Grid>

    
</Window>
